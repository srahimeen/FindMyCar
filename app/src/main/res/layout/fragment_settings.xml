<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"/>
    <CheckBox
        android:id="@+id/offlineStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline Storage"
        android:checked="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/garageAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garage Info"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Visual"/>

    <CheckBox
        android:id="@+id/mapAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Directions Alternate View"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/historyAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map History Alternate View"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"/>


    <CheckBox
        android:id="@+id/darkTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Theme"
        android:layout_marginLeft="10dp"/>

</LinearLayout>
